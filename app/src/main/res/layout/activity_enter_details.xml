<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".enter_details">


    <TextView
        android:id="@+id/enterdetailstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="671dp"
        android:text="ENTER DETAILS"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/griddata"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="562dp"
        android:hint="meet"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/extratips"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="485dp"
        android:hint="Extra tips"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="409dp"
        android:hint="Set Location"
        android:textColor="#000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="361dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Add task"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="239dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:padding="10dp"
        android:shape="rectangle"
        android:text="Cancel"
        android:textSize="20sp" />


</RelativeLayout>